<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_guessing" tools:context=".GuessingActivity">

    <TextView android:text="Which Wikipedia article does this excerpt belong to?"
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <TextView android:text="Hint"
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="20dp"/>

    <Button android:text="Answer 1"
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hint"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>
    <Button android:text="Answer 2"
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer1"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>
    <Button android:text="Answer 3"
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer2"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

    <TextView android:text="Current Streak: 5"
        android:id="@+id/streak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>
</RelativeLayout>
